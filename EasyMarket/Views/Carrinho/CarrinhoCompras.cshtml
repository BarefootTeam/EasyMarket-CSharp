@model EasyMarket.Models.Carrinho

@{
    ViewBag.Title = "CarrinhoCompras";
}

@Html.ValidationSummary(true)
<div class="panel panel-info">
    <div class="panel-heading"> Interface de Compras </div>
    <p></p>
    @using (Html.BeginForm("Carrinho_Compras", "Carrinho", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
            {

        <div class="form-group">
            <label for="ICnpj" class="col-sm-2 control-label">Sub-Total</label>
            <div class="col-sm-3">
                <input type="number" class="form-control" placeholder="" name="Numero" id="INumero" readonly>
            </div>
            <div>
                <button type="submit" class="btn btn-info"> <span class="glyphicon glyphicon-list"></span>&nbsp;&nbsp;&nbsp;Lista&nbsp;</button>
            </div>
        </div>

                <p></p>
                <div class="row">
                    <div class="col-md-12 col-md-offset-2">
                        <div class="btn-group btn-group-sm">
                            <button type="submit" class="btn btn-info">
                                <span class="glyphicon glyphicon-plus"></span> Adcionar
                            </button>

                        </div>
                        <div class="btn-group btn-group-sm">
                            <button type="submit" class="btn btn-danger">
                                <span class="glyphicon glyphicon-minus"></span>  Remover
                            </button>
                        </div>
                    </div>
                </div>
                <p></p>
    }
</div>



