@model EasyMarket.Models.Cliente

  <div class="jumbotron">
    <center><h2>EasyMarket</h2></center>
       <div>
        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-inline", @role = "form" }))
        {
            @Html.ValidationSummary(true)
            <div>
                <div class="form-group">
                    <label for="Label_Nome">Nome</label>
                    <input type="text" class="form-control" id="Nome" name="Nome"  placeholder="Insira o Seu Nome ">
                </div>

                <div class="form-group">
                    <label for="Label_Cpf">Cpf</label>
                    <input type="text" class="form-control" id="Cpf" name="Cpf" placeholder="Insira o Seu Cpf ">
                </div>

                <div class="form-group">
                    <br /> &nbsp;
                    <button type="submit" class="btn btn-primary"> Iniciar Compras &nbsp;&nbsp; <span class="glyphicon glyphicon-shopping-cart"></span> </button> &nbsp;
                    <button type="submit" class="btn btn-success" name="Convidado"> Convidado &nbsp;&nbsp; <span class="glyphicon glyphicon-user"></span> </button> &nbsp;                    
                </div>
            </div>
           }
                
            </div>
</div>




