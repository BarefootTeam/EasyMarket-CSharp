@model IEnumerable<EasyMarket.Models.Produto>

<div class="panel panel-default">
    <div class="panel-heading">Lista de produtos</div>    

    <div class="btn-group" role="group" aria-label="...">
        <button type="button" class="btn btn-info">
            @Html.ActionLink("  ", "Create")
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> &nbsp; Novo
        </button>

        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Selecione o Supermercado
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              
                 @if (1 == 1 )
                 {                           

                <li>@Html.DisplayNameFor(model => model.Nome)</li>
                <li><a href="#">If</a></li>
                 }else {
                   <li><a href="#">Else </a></li>
                   <li><a href="#">Dropdown Else</a></li>
                 }
                 
                

            </ul>
        </div>
    </div>
        
      <div id="Tabela">
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecoCusto)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecoCusto)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>   
</div>




