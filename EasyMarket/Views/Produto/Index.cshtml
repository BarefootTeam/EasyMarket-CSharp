@model IEnumerable<EasyMarket.Models.Produto>

<div class="panel panel-info">
    <div class="panel-heading">Lista de produtos do Supermercado &nbsp; <span class="glyphicon glyphicon-forward" aria-hidden="true"></span> &nbsp; @Html.DisplayName(Model.First().Supermercado.Nome) </div>    

    <div class="btn-group" role="group" aria-label="...">      
        <div class="btn-group" role="group">
            <a href="@Url.Action("Create", "Produto")" class="btn btn-default btn-sm"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> &nbsp; Cadastrar Produto </a>
        </div>
        <div class="btn-group" role="group">
            <a href="@Url.Action("SelecionarMercado", "Produto")" class="btn btn-default btn-sm"> <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> &nbsp; Selecionar Outro Supermercado </a>
        </div>
   </div>
        
      <div id="Tabela">
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cod)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecoCusto)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecoCusto)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>   
</div>




