@model EasyMarket.Models.Produto

<div class="panel panel-info">
    <div class="panel-heading"> Detalhe do Produto </div>
    <div class="panel-body"> 
     <div>
         <table>
                <tr>
                    <td>
                        <img src="~/Content/Uploads/@Html.DisplayFor(model => model.Foto)" class="img-responsive" alt="Imagem responsiva" title="@Html.DisplayFor(model => model.Foto)">
                    </td>
                    <td>
                        <dl class="dl-horizontal">
                            <dt>
                                Nome do Produto
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Nome)
                            </dd>

                            <dt>
                                Codigo de Barra
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Cod)
                            </dd>

                            <dt>
                                Descricao
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Descricao)
                            </dd>

                            <dt>
                                Preço
                            </dt>

                            <dd>
                                R$  @Html.DisplayFor(model => model.PrecoCusto)
                            </dd>
                            <dt>
                               Supermercado
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Supermercado.Nome)
                            </dd>                           
                        </dl>
                    </td>
                  </tr>
            </table>
     </div>
        <p>
            <a href="@Url.Action("Index", "Produto")" class="btn btn-primary btn-sm"> <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Voltar</a> &nbsp;
            <a href="@Url.Action("Edit", "Produto",new { id = Model.Id })" class="btn btn-warning btn-sm"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> &nbsp; Editar </a>
         </p>
    </div>    
</div>
