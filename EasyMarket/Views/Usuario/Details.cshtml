@model EasyMarket.Models.Usuario

<div class="panel panel-info">
    <div class="panel-heading"> Detalhe do Usuário </div>
    <div class="panel-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    Login
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Login)
                </dd>
                <dt>
                    Senha
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Senha)
                </dd>
                <dt>
                    Nome
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt>
                    Cpf
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Cpf)
                </dd>
                <dt>
                    Supermercado
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Supermercado.Nome)
                </dd>
                <dt>
                    Id
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Supermercado.Id)
                </dd>
            </dl>
        </div>
        <p>
            <a href="@Url.Action("Index", "Usuario")" class="btn btn-primary btn-sm"> <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Voltar</a> &nbsp;
            <a href="@Url.Action("Edit", "Usuario",new { id = Model.Id })" class="btn btn-warning btn-sm"> <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> &nbsp; Editar </a>
        </p>
    </div>
</div>
